---
import "../styles/global.css";
import TopNav from "../components/TopNav.astro";

const props = Astro.props;
const title = typeof props.title === "string" ? props.title : "Ekonomismedjan";
---

<!doctype html>
<html lang="sv">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>

  <body class="min-h-screen flex flex-col bg-[var(--bg)] text-[var(--text)]">
    <!-- Global top navigation -->
    <TopNav />

    <!-- Main content area -->
    <main class="flex-1">
      <div class="w-full max-w-6xl mx-auto px-4 md:px-6 py-10">
        <slot />
      </div>
    </main>
  </body>
</html>
