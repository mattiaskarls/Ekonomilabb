---
import BaseLayout from "../../layouts/BaseLayout.astro";

const chip =
  "inline-flex items-center justify-center rounded-full border border-[var(--border)] bg-[var(--surface-soft)]/60 text-[var(--text)] px-4 py-2 text-sm transition hover:border-[var(--gold)] hover:text-[var(--gold)]";

const note =
  "text-sm text-[var(--text-muted)] leading-relaxed";
---

<BaseLayout title="FIRE-verktyg – Verktyg">
  <!-- HEADER -->
  <header class="space-y-3 pb-6">
    <h1 class="text-2xl font-semibold">FIRE-verktyg</h1>

    <p class={note}>
      Snabba och enkla kalkyler för ränta-på-ränta, 4-procentregeln och andra
      praktiska överslag. Perfekt för att sanity-checka antaganden.
    </p>

    <div class="flex flex-col sm:flex-row gap-3 pt-2 sm:justify-start">
      <a
        href="/tools/fire_verktyg.html"
        target="_blank"
        rel="noopener"
        class={chip}
      >
        Öppna i ny flik →
      </a>
      <a href="/kunskap/tagg/isk/" class={chip}>
        Läs relaterat (ISK) →
      </a>
    </div>
  </header>

  <!-- Iframe container -->
  <section class="rounded-2xl border border-[var(--border)] bg-[var(--surface)]/60 overflow-hidden">
    <iframe
      src="/tools/fire_verktyg.html"
      title="FIRE-snabbverktyg"
      class="block w-full"
      style="height: calc(100vh - 260px); border: 0;"
      loading="lazy"
    ></iframe>
  </section>

  <p class="pt-3 text-xs text-[var(--text-muted)]">
    Tips: För maximal skärmyta kan du öppna verktygen i en ny flik.
  </p>
</BaseLayout>
