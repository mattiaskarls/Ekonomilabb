---
import BaseLayout from "../../layouts/BaseLayout.astro";

const card =
  "rounded-2xl border border-[var(--border)] bg-[var(--surface)]/70 p-6 transition hover:border-[var(--gold)]";

const subtleBtn =
  "inline-flex items-center justify-center rounded-xl border border-[var(--border)] bg-[var(--surface-soft)] hover:border-[var(--gold)] text-[var(--text)] px-4 py-2 transition";

const textLink =
  "text-sm text-[var(--text-muted)] hover:text-[var(--gold)] transition";

const tools = [
  {
    title: "FIRE & pension",
    desc:
      "Modellera arbetsliv, ISK, tjänstepension och allmän pension – och se helheten över tiden.",
    href: "/verktyg/fire-pension/",
    guideHref: "/kunskap/",
    guideLabel: "",
    bullets: [
      "Se när du kan sluta jobba",
      "Följ månadsinkomst före och efter pension",
      "Förstå ISK:s uppbyggnad och uttagsfaser",
    ],
    imgAlt: "FIRE och pension",
    imgSrc: "/images/fireochpension.png",
  },
  {
    title: "FIRE & pension – guide",
    desc:
      "Steg-för-steg-guide: antaganden, fält och tolkning av resultaten.",
    href: "/verktyg/fire-pension-guide/",
    guideHref: "/verktyg/fire-pension/",
    guideLabel: "",
    bullets: [
      "Vad varje fält betyder",
      "Hur du tolkar resultatet",
      "Vanliga misstag och rimlighetstester",
    ],
    imgAlt: "FIRE och pension – guide",
    imgSrc: "/images/fireochpensionguide.png",
  },

  {
    title: "Nya 3:12-reglerna (2026+)",
    desc:
      "Ny kalkylator för dig med eget företag för de nya 3:12-reglerna (2026+).",
    href: "/verktyg/312-regler-2026/",
    guideHref: "/kunskap/",
    guideLabel: "",
    bullets: [
      "Se vilken maximal utdelning du kan ta ut",
      "Jämför grundbelopp och lönebaserat utrymme",
      "Baserad på 3:12-reglerna till och med 2026",
    ],
    imgAlt: "312-reglerna 2026+",
    imgSrc: "/images/312.png",
  },


  {
    title: "Jag & mitt AB (-2025)",
    desc:
      "För dig som driver aktiebolag och vill optimera mellan lön, utdelning och tjänstepension.",
    href: "/verktyg/jag-och-mitt-ab/",
    guideHref: "/kunskap/",
    guideLabel: "",
    bullets: [
      "Jämför lön, utdelning och TJP",
      "Se effekt på bolag och privatekonomi",
      "Baserad på 3:12-reglerna till och med 2025",
    ],
    imgAlt: "Jag och mitt AB",
    imgSrc: "/images/jagochmittab.png",
  },
  {
    title: "Snabbverktyg",
    desc:
      "Enkla kalkyler för ränta-på-ränta, 4-procentregeln och andra snabba överslag.",
    href: "/verktyg/fire-verktyg/",
    guideHref: "/kunskap/",
    guideLabel: "",
    bullets: [
      "Ränta-på-ränta med månadssparande",
      "Uttagsnivåer enligt 4-%-regeln",
      "Snabba sanity checks",
    ],
    imgAlt: "Snabbverktyg",
    imgSrc: "/images/verktyg.png",
  },

  {
    title: "Tajma Marknaden - Spel",
    desc:
      "Kan du slå strategin att köpa och behålla? Testa och se hur lätt det är...",
    href: "/verktyg/market-timing/",
    guideHref: "/kunskap/",
    guideLabel: "",
    bullets: [
      "Köp och sälj under 10 år",
      "Försök köpa billigt och sälja dyrt",
      "Se hur du står dig mot 'köp & behåll' och månadssparande",
    ],
    imgAlt: "Tajma Marknaden - Spel",
    imgSrc: "/images/spel.png",
  },

  {
    title: "Besparingar över tid - Kalkylator",
    desc:
      "Se hur besparingar i ditt liv växer över tid med ränta-på-ränta",
    href: "/verktyg/besparingar/",
    guideHref: "/kunskap/",
    guideLabel: "",
    bullets: [
      "Se hur engångs- och löpande besparingar växer",
      "Hur mycket sparar du över tid?",
      "Är dina 'småutgifter' verkligen små över tid?",
    ],
    imgAlt: "Besparingar över tid - Kalkylator",
    imgSrc: "/images/besparingar.png",
  },

  {
    title: "Tid till FIRE - Kalkylator",
    desc:
      "Se ökade kostnader eller mer sparande påverkar din tid till ekonomisk frihet",
    href: "/verktyg/tid-till-fire/",
    guideHref: "/kunskap/",
    guideLabel: "",
    bullets: [
      "Hur påverkar extra kostnader din tid till FIRE?",
      "Hur påverkar extra sparande din tid till FIRE?",
      "Se allt i en enkel översikt",
    ],
    imgAlt: "Tid till FIRE - Kalkylator",
    imgSrc: "/images/tid-till-fire.png",
  },

  {
    title: "Rik eller Fri? - Kalkylator",
    desc:
      "Jämför tid till finansiell frihet mellan två scenarion: rik livsstil vs fri livsstil",
    href: "/verktyg/rik-eller-fri/",
    guideHref: "/kunskap/",
    guideLabel: "",
    bullets: [
      "Leva som en kung och jobba länge?",
      "Snåla och bli fri snabbt?",
      "Eller kanske något mitt emellan?",
    ],
    imgAlt: "Rik eller Fri? - Kalkylator",
    imgSrc: "/images/rikellerfri.png",
  },

    {
    title: "Ta fram din Balansräkning",
    desc:
      "Hur ser din privatekonomiska balansräkning ut? Få en överblick över tillgångar och skulder.",
    href: "/verktyg/balansrakning/",
    guideHref: "/kunskap/",
    guideLabel: "",
    bullets: [
      "Vad äger du och vad är du skyldig?",
      "Få en överblick över din ekonomi",
      "Enkel och snabb att använda",
    ],
    imgAlt: "Ta fram din Balansräkning",
    imgSrc: "/images/balansrakning.png",
  },

];
---

<BaseLayout title="Verktyg – Ekonomismedjan">
  <!-- HEADER -->
  <header class="space-y-3 pb-10">
    <div class="flex items-end justify-between gap-4 flex-wrap">
      <h1 class="text-2xl font-semibold">Verktyg</h1>
      <span class="text-xs text-[var(--text-muted)]">{tools.length} verktyg</span>
    </div>

    <p class="text-[var(--text-muted)] max-w-3xl">
      Praktiska kalkylatorer som hjälper dig förstå hur lön, sparande, pension och företagande
      hänger ihop över ett helt liv.
    </p>
  </header>

  <!-- TOOLS GRID -->
  <section class="grid gap-6 md:grid-cols-3">
    {tools.map((t) => (
      <article class={card}>
        <div class="space-y-4">
          <div class="flex items-start gap-4">
            <img
              src={t.imgSrc}
              alt={t.imgAlt}
              width="56"
              height="56"
              class="h-14 w-14 rounded-xl border border-[var(--border)] bg-[var(--surface)] object-cover"
              loading="lazy"
            />
            <div class="space-y-1 min-w-0">
              <h2 class="text-lg font-semibold">{t.title}</h2>
              <p class="text-sm text-[var(--text-muted)] leading-relaxed">
                {t.desc}
              </p>
            </div>
          </div>

          <ul class="text-sm space-y-2">
            {t.bullets.map((b) => (
              <li class="flex gap-2">
                <span class="text-[var(--gold)]">▸</span>
                <span class="text-[var(--text)]/90">{b}</span>
              </li>
            ))}
          </ul>

          <div class="flex flex-col gap-2 pt-2">
            <a href={t.href} class={subtleBtn} aria-label={`Öppna: ${t.title}`}>
              Öppna →
            </a>
            <a href={t.guideHref} class={textLink}>
              {t.guideLabel}
            </a>
          </div>
        </div>
      </article>
    ))}
  </section>

  <!-- NOTE -->
  <section class="pt-12">
    <div class="rounded-2xl border border-[var(--border)] bg-[var(--surface)]/50 p-6">
      <p class="text-sm text-[var(--text)]/90 max-w-3xl">
        Alla verktyg på Ekonomismedjan bygger på förenklade antaganden.
        De är till för förståelse och planering – inte som personlig rådgivning.
      </p>
    </div>
  </section>
</BaseLayout>
