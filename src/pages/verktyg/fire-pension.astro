---
import BaseLayout from "../../layouts/BaseLayout.astro";

const chip =
  "inline-flex items-center justify-center rounded-full border border-[var(--border)] bg-[var(--surface-soft)]/60 text-[var(--text)] px-4 py-2 text-sm transition hover:border-[var(--gold)] hover:text-[var(--gold)]";

const note =
  "text-sm text-[var(--text-muted)] leading-relaxed";
---

<BaseLayout title="FIRE & pension – Verktyg">
  <!--
    Viktigt: Vi gör hela sidan till en fast “app-view” utan outer scroll.
    Scroll ska endast ske inne i iframen.
  -->
  <div class="h-[calc(100dvh-96px)] flex flex-col">
    <!-- HEADER (flex-none) -->
    <header class="space-y-3 pb-4 flex-none">
      <h1 class="text-2xl font-semibold">FIRE & pension</h1>

      <p class={note}>
        Kalkylatorn körs här inne i sajten. Om något ser konstigt ut på mobil kan du öppna den i en ny flik.
      </p>

      <div class="flex flex-col sm:flex-row gap-3 pt-1 sm:justify-start">
        <a href="/tools/fire_pension_kalkylator.html" target="_blank" rel="noopener" class={chip}>
          Öppna i ny flik →
        </a>
        <a href="/kunskap/tagg/fire/" class={chip}>
          Läs relaterat (FIRE) →
        </a>
      </div>
    </header>

    <!-- IFRAME (flex-1) -->
    <section class="flex-1 min-h-0 rounded-2xl border border-[var(--border)] bg-[var(--surface)]/60 overflow-hidden">
      <iframe
        src="/tools/fire_pension_kalkylator.html"
        title="FIRE & pensionskalkylator"
        class="block w-full h-full"
        style="border:0"
        loading="lazy"
      ></iframe>
    </section>
  </div>
</BaseLayout>
